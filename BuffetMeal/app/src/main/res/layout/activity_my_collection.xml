<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="16dp"
              android:paddingRight="16dp"
              android:paddingTop="16dp"
              tools:context="com.example.apple.buffetapplication.HistoryActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/backgroundcollect"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="我的收藏"
        android:textColor="@color/deepgreen"
        android:textSize="23dp"
        android:gravity="center_horizontal"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:gravity="end"
        android:background="@drawable/detailbackground"
        android:text="点击进入商家界面哦！"
        android:textColor="@android:color/holo_orange_dark"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/my_collection_listview"
        >

    </ListView>
</LinearLayout>
